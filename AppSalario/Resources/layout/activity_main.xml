<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/darkGray"
    android:layout_height="match_parent">

    <TextView
        android:text="Â¡Bienvenido\na nuestra App!"
        android:textStyle="bold"
        android:layout_margin="20dp"
        android:textSize="35dp"
        android:textColor="@color/white"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView1" />
    <TextView
        android:text="Repositorio de todas las aplicaciones de la clase de facultativa"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_marginLeft="20dp"
        android:textColor="@color/gray"
        android:id="@+id/textView2" />



    <ImageButton
        android:contentDescription=""
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@color/darkGray"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="40dp"
        android:id="@+id/mainBtn1"
        android:src="@drawable/iconoflechablanca"
        android:scaleType="fitCenter" />

    <ImageView
        android:contentDescription=""
        android:src="@drawable/android"
        android:layout_width="250dp"
        android:layout_height="500dp"
        android:scaleType="matrix"
        android:layout_toRightOf="@+id/mainBtn1"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/imageView1" />

</RelativeLayout>
